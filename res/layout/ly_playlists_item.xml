<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  	
  style="@style/AddressBookListItem"
  android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip"
  >

  	<ImageView
  	    android:id="@+id/address_book_item_call"
  	    style="@style/AddressBookImageItem"
  	    android:layout_alignParentLeft="true"
  	    android:layout_centerVertical="true"
  	    android:src="@drawable/playlistitem"
  	    android:text="Phone Call" />

	<!-- Artist Name -->

  	<TextView
  	    android:id="@+id/address_book_item_name"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_centerVertical="true"
  	    android:layout_toRightOf="@+id/address_book_item_call"
  	    android:text="Reciter Name"
  	    android:textColor="#444444"
  	    android:textSize="18sp"
  	    android:textStyle="bold"
  	    android:typeface="sans" />
  
</RelativeLayout>
